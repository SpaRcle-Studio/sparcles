---
import Layout from '../layouts/Layout.astro';
---

<Layout title="SpaRcle Studio">
	<main>
		<div class="header">
		</div>
		<h1><span class="text-gradient">SpaRcle Studio</span></h1>
		<p class="tmp">Work in progress.</p>
	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}
	h1 {
		font-size: 4rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
	}
	.tmp {
		text-align: center;
	}
	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
	.header {

	}
</style>
